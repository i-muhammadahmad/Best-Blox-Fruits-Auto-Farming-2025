import React, { useState, useEffect } from 'react';
import PropTypes from 'prop-types';
import clsx from 'clsx';
import { makeStyles } from '@material-ui/styles';
import { 
  Typography,
  Grid,
} from '@material-ui/core';
import { 
  redirectToActivitySetupList,
  deleteActivitySetup,
  getActivitySetupById
} from 'actions';
import { ViewActionButtons, DeleteAlert } from 'components';
import useRouter from 'utils/useRouter';
import { useSelector, useDispatch } from 'react-redux';

const useStyles = makeStyles(() => ({
  root: {}
}));

const Header = props => {
  const { className, ...rest } = props;

  const classes = useStyles();
  const dispatch = useDispatch();
  const router = useRouter();
  const activitySetupState = useSelector(state => state.activitySetupState);
  const session = useSelector(state => state.session);

  const [openDeleteModel, setOpenDeleteModel] = useState(false); 

  useEffect(() => {
    if (activitySetupState.showViewPage) {
      router.history.push('/activity-setup/view');
    }
    // eslint-disable-next-line react-hooks/exhaustive-deps
  }, [activitySetupState.showViewPage]);

  const deleteRecord = async () => {
    await dispatch(deleteActivitySetup(activitySetupState.activitySetupRecord.id, session.current_page_permissions.object_id));
    closeView();
  }

  const showDeleteModal = () => {
    setOpenDeleteModel(true)
  }

  const hideDeleteModel = () => {
  }

  const viewRecord = () => {
    dispatch(getActivitySetupById(activitySetupState.activitySetupRecord.id, 'view'))
  }

  const closeView = () => {
    dispatch(redirectToActivitySetupList())
  }

  return (
    <div
      {...rest}
      className={clsx(classes.root, className)}
    >
      <Grid
        alignItems="flex-end"
        container
        justify="space-between"
        spacing={3}
      >
        <Grid item>
          <Typography
            component="h2"
            gutterBottom
            variant="overline"
          >
            Activity Management
          </Typography>
          <Typography
            component="h1"
            variant="h3"
          >
            Activity Setup
          </Typography>
        </Grid>
        <Grid item>
          <ViewActionButtons  
            btnToShow={['delete', 'view']}
            viewRecord={viewRecord}
            deleteRecord={showDeleteModal}
          />
        </Grid>
      </Grid>   
      <DeleteAlert
        title="Activity Setup Delete"
        alertText="Are you sure, You want delete this Activity Setup?"
        deleteCallback={deleteRecord}
        modalOpen={openDeleteModel}
        handleModalOpen={setOpenDeleteModel}
        onModelClose={hideDeleteModel}
      /> 
    </div>
  );
};

Header.propTypes = {
  className: PropTypes.string
};

export default Header;
