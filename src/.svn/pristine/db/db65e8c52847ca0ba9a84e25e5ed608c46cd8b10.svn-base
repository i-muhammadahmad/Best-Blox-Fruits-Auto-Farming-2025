import axios from 'axios';
import { API_URL } from 'configs'

export const AUDIT_FORM_REQUEST = 'AUDIT_FORM_REQUEST'
export const AUDIT_FORM_SUCCESS = 'AUDIT_FORM_SUCCESS'
export const AUDIT_FORM_VALIDATION_ERROR = 'AUDIT_FORM_VALIDATION_ERROR'
export const SHOW_SNACKBAR = 'SHOW_SNACKBAR';
export const HIDE_AUDIT_FORM_FEILD_VALIDATION_ERROR = "HIDE_AUDIT_FORM_FEILD_VALIDATION_ERROR"
export const REDIRECT_TO_AUDIT_FORM_LIST = 'REDIRECT_TO_AUDIT_FORM_LIST'
export const AUDIT_FORM_GET_SUCCESS = 'AUDIT_FORM_GET_SUCCESS'
export const AUDIT_FORM_SERVER_SUCCESS = 'AUDIT_FORM_SERVER_SUCCESS'
const SHOW_LOADER = 'SHOW_LOADER';
const HIDE_LOADER = 'HIDE_LOADER';

const showCommonLoader = (label = '') => ({
  type: SHOW_LOADER,
  common_loder_label: label
})
const hideCommonLoader = () => ({
  type: HIDE_LOADER,
})

const auditFormRequest = () => ({
  type: AUDIT_FORM_REQUEST,
})

export const auditFormServerListSuccess = () => ({
  type: AUDIT_FORM_SERVER_SUCCESS
})

const auditFormListSuccess = auditFormList => ({
  type: AUDIT_FORM_SUCCESS,
  auditFormList: auditFormList,
})

const auditFormFailure = notification => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: notification,
  snackbar_notification_type: 'general_error'
})
const validationError = notification => ({
  type: AUDIT_FORM_VALIDATION_ERROR,
  validation_error: notification,
})
const tokenError = notification => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: notification,
  snackbar_notification_type: 'token_expire'
})

const auditFormAddUpadteSuccess = (message, action, dispatch) => {
  dispatch(auditFormSuccessNotification(message))
  dispatch(redirectToAuditFormList())
}

export const redirectToAuditFormList = () => ({
  type: REDIRECT_TO_AUDIT_FORM_LIST,
})

const getAuditFormSuccess = (response, action) => ({
  type: AUDIT_FORM_GET_SUCCESS,
  record: response,
  actionType: action
})

const auditFormSuccessNotification = message => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: message,
  snackbar_notification_type: 'success'
})


export const hideAuditFormValidationError = (feild_key) => ({
  type: HIDE_AUDIT_FORM_FEILD_VALIDATION_ERROR,
  feild_key: feild_key
})

export const auditFormListFetch = (object_viewed_id = '') => {
  var token = localStorage.getItem("token")
  return dispatch => {
    dispatch(auditFormRequest())
    dispatch(showCommonLoader())
    return axios(API_URL + "audit_form/getAll", {
      method: "GET",
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
        'Authorization': 'Bearer ' + token
      },
      params: {object_viewed_id: object_viewed_id}
    })
      .then((response) => {
        dispatch(hideCommonLoader())
        dispatch(auditFormListSuccess(response.data))
      }, (error) => {
        dispatch(hideCommonLoader())
        handleErrorResponse(error, dispatch)
      });

  }
}

