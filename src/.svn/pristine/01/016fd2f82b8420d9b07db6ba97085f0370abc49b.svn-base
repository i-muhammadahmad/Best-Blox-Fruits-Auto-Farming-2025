  activityCategoryParentsList: activityCategoryParentsList,
})

const activityCategoryFailure = notification => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: notification,
  snackbar_notification_type: 'general_error'
})
const validationError = notification => ({
  type: ACTIVITY_CATEGORY_VALIDATION_ERROR,
  validation_error: notification,
})
const tokenError = notification => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: notification,
  snackbar_notification_type: 'token_expire'
})

const activityCategoryAddUpadteSuccess = (message, action, dispatch) => {
  dispatch(activityCategorySuccessNotification(message))
  dispatch(redirectToActivityCategoryList())
}

export const redirectToActivityCategoryList = () => ({
  type: REDIRECT_TO_ACTIVITY_CATEGORY_LIST,
})

const getActivityCategorySuccess = (response, action) => ({
  type: ACTIVITY_CATEGORY_GET_SUCCESS,
  record: response,
  actionType: action
})

const activityCategorySuccessNotification = message => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: message,
  snackbar_notification_type: 'success'
})

export const hideActivityCategoryValidationError = (feild_key) => ({
