const SHOW_LOADER = 'SHOW_LOADER';
const HIDE_LOADER = 'HIDE_LOADER';

const showCommonLoader = (label = '') => ({
  type: SHOW_LOADER,
  common_loder_label: label
})
const hideCommonLoader = () => ({
  type: HIDE_LOADER,
})

const activityCategoryRequest = () => ({
  type: ACTIVITY_CATEGORY_REQUEST,
})

export const activityCategoryServerListSuccess = () => ({
  type: ACTIVITY_CATEGORY_SERVER_SUCCESS,
})

const activityCategoryListSuccess = activityCategoryList => ({
  type: ACTIVITY_CATEGORY_SUCCESS,
  activityCategoryList: activityCategoryList,
})

const activityCategoryParentListSuccess = activityCategoryParentsList => ({
