import React, {useEffect} from 'react';
import { Page } from 'components';
import useRouter from 'utils/useRouter';
import {
  Header
} from './components'; 
import { 
  makeStyles,
  Paper,
  Backdrop,
  Dialog,
  DialogActions,
  DialogContent,
  DialogTitle,
  Table,
  TableBody,
  TableCell,
  TableContainer,
  TableRow,
  Card,
  CardHeader,
  CardContent
} from '@material-ui/core';
import { useSelector, useDispatch } from 'react-redux';
import { isEmpty } from 'lodash';

const useStyles = makeStyles(theme => ({
  root: {
    width: theme.breakpoints.values.lg,
    maxWidth: '100%',
    margin: '0 auto',
    padding: theme.spacing(3, 3, 6, 3)
  },
  projectDetails: {
    marginTop: theme.spacing(3)
  },
  formGroup: {
    marginBottom: theme.spacing(3)
  }
}));

const DocumentsCategoryView = () => {
  const classes = useStyles();
  const router = useRouter();
  const documentsCategoryState = useSelector(state => state.documentsCategoryState);
  const dispatch = useDispatch();

  useEffect(() => {
    if(documentsCategoryState.redirect_to_list){
      router.history.push('/documents-category');
    } 
  }, [documentsCategoryState.redirect_to_list, router.history]);

  useEffect(()=> {
    if(!documentsCategoryState.showViewPage){
      router.history.push('/documents-category');
    }
    // eslint-disable-next-line react-hooks/exhaustive-deps
  },[documentsCategoryState.showViewPage]);

  console.log(documentsCategoryState.documentsCategoryRecord.role);

  return (
    <Page
      className={classes.root}
      title="Tickets Category View"
    >
      <Header />
      <Card
        className={classes.projectDetails}
      >
        <CardHeader title="Tickets Category View" />
        <CardContent>
          <TableContainer component={Paper}>
            <Table className={classes.table} aria-label="simple table">
              <TableBody>
                <TableRow>
                  <TableCell variant="head" > Document Category Name </TableCell>
                  <TableCell>{documentsCategoryState.documentsCategoryRecord.category_name}</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Created By </TableCell>
                  <TableCell>{
                    !isEmpty(documentsCategoryState.documentsCategoryRecord.created_by_user)?
                    documentsCategoryState.documentsCategoryRecord.created_by_user.email:''
                  }</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Created At </TableCell>
                  <TableCell>{documentsCategoryState.documentsCategoryRecord.date_created}</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Last Updated By </TableCell>
                  <TableCell>{
                    !isEmpty(documentsCategoryState.documentsCategoryRecord.created_by_user)?
                    documentsCategoryState.documentsCategoryRecord.updated_by_user.email:''
                  }</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Last Updated At </TableCell>
                  <TableCell>{documentsCategoryState.documentsCategoryRecord.date_last_modified}</TableCell>
                </TableRow>
              </TableBody> 
            </Table> 
          </TableContainer>    
        </CardContent>
      </Card> 
      <Card
        className={classes.projectDetails}
      >
        <CardHeader title="Ticket Category Description" />
        <CardContent>
          <div 
            className="ck-content" dangerouslySetInnerHTML={{ __html: documentsCategoryState.documentsCategoryRecord.description }} 
          />  
        </CardContent>  
      </Card>   
    </Page>  
  );
}

export default DocumentsCategoryView;