.filter_button {
    color: #FFFFFF;
    cursor: pointer;
    -webkit-animation: glowing_options 1500ms infinite;
    -moz-animation: glowing_options 1500ms infinite;
    -o-animation: glowing_options 1500ms infinite;
    animation: glowing_options 1500ms infinite;
  }
  
   @-webkit-keyframes glowing_options {
    0% { background-color: #007bff; -webkit-box-shadow: 0 0 3px #007bff; }
    50% { background-color: #6879dc; -webkit-box-shadow: 0 0 40px #6879dc; }
    100% { background-color: #007bff; -webkit-box-shadow: 0 0 3px #007bff; }
  }
  
  @-moz-keyframes glowing_options {
    0% { background-color: #007bff; -moz-box-shadow: 0 0 3px #007bff; }
    50% { background-color: #6879dc; -moz-box-shadow: 0 0 40px #6879dc; }
    100% { background-color: #007bff; -moz-box-shadow: 0 0 3px #007bff; }
  }
  
  @-o-keyframes glowing_options {
    0% { background-color: #007bff; box-shadow: 0 0 3px #007bff; }
    50% { background-color: #6879dc; box-shadow: 0 0 40px #6879dc; }
    100% { background-color: #007bff; box-shadow: 0 0 3px #007bff; }
  }
  
  @keyframes glowing_options {
    0% { background-color: #007bff; box-shadow: 0 0 3px #007bff; }
    50% { background-color: #6879dc; box-shadow: 0 0 40px #6879dc; }
    100% { background-color: #007bff; box-shadow: 0 0 3px #007bff; }
  }

  /* Popover Style */

  .popover_div{
    padding: 10px;
    background-color: whitesmoke;
    font-size: 16px;
    border: 1px solid;
    border-radius: 10px;
    position: absolute;
    transition: all 0.5s cubic-bezier(0.75, -0.02, 0.2, 0.97);
    box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
  }

  #floor_plan{
    width: 100%;
    height: 100%;
    transform-origin: 0px 0px;
    transform: scale(1) translate(0px, 0px);
  }

  #floor_plan svg {
    width: 100%;
    height: auto;
  }
