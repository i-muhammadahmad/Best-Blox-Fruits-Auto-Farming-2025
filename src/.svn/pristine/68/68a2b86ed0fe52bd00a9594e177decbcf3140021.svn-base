const useStyles = makeStyles(() => ({
  root: {}
}));

const Header = props => {
  const { className, ...rest } = props;

  const classes = useStyles();
  const dispatch = useDispatch();

  return (
    <div
      {...rest}
      className={clsx(classes.root, className)}
    >
      <Grid
        alignItems="flex-end"
        container
        justify="space-between"
        spacing={3}
      >
        <Grid item>
          <Typography
            component="h2"
            gutterBottom
            variant="overline"
          >
            Client Management
          </Typography>
          <Typography
            component="h1"
            variant="h3"
          >
            Client
          </Typography>
        </Grid>
        <Grid item>
          <StyledButton
              variant="contained"
              color="blight"
              size="small"
              onClick={() => { dispatch(redirectToClientList()) }}
              startIcon={<CancelIcon />}
            >
              CLOSE
          </StyledButton>
        </Grid>  
      </Grid>  
    </div>
  );
};

Header.propTypes = {
  className: PropTypes.string
};

export default Header;
