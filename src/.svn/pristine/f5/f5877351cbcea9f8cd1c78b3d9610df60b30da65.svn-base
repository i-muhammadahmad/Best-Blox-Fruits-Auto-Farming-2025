import React, {useEffect} from 'react';
import { Page } from 'components';
import useRouter from 'utils/useRouter';
import {
  Header
} from './components';
import { 
  makeStyles,
  Paper,
  Backdrop,
  Dialog,
  DialogActions,
  DialogContent,
  DialogTitle,
  Table,
  TableBody,
  TableCell,
  TableContainer,
  TableRow,
  Card,
  CardHeader,
  CardContent
} from '@material-ui/core';
import { useSelector, useDispatch } from 'react-redux';
import { isEmpty } from 'lodash';

const useStyles = makeStyles(theme => ({
  root: {
    width: theme.breakpoints.values.lg,
    maxWidth: '100%',
    margin: '0 auto',
    padding: theme.spacing(3, 3, 6, 3)
  },
  projectDetails: {
    marginTop: theme.spacing(3)
  },
  formGroup: {
    marginBottom: theme.spacing(3)
  }
}));

const DesignationView = () => {
  const classes = useStyles();
  const router = useRouter();
  const designationState = useSelector(state => state.designationState);
  const dispatch = useDispatch();

  useEffect(() => {
    if(designationState.redirect_to_list){
      router.history.push('/designation');
    } 
  }, [designationState.redirect_to_list, router.history]);

  useEffect(()=> {
    if(!designationState.showViewPage){
      router.history.push('/designation');
    }
    // eslint-disable-next-line react-hooks/exhaustive-deps
  },[designationState.showViewPage]);

  return (
    <Page
      className={classes.root}
      title="Designation View"
    >
      <Header />
      <Card
        className={classes.projectDetails}
      >
        <CardHeader title="Designation View" />
        <CardContent>
          <TableContainer component={Paper}>
            <Table className={classes.table} aria-label="simple table">
              <TableBody>
                <TableRow>
                  <TableCell variant="head" > Name </TableCell>
                  <TableCell>{designationState.designationRecord.name}</TableCell>
                </TableRow>

                <TableRow>
                  <TableCell variant="head" > Category </TableCell>
                  <TableCell>{
                    !isEmpty(designationState.designationRecord.category_record)?
                    designationState.designationRecord.category_record.opt_display:''
                  }</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Level </TableCell>
                  <TableCell>{designationState.designationRecord.level}</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Created By </TableCell>
                  <TableCell>{
                    !isEmpty(designationState.designationRecord.created_by_user)?
                    designationState.designationRecord.created_by_user.email:''
                  }</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Created At </TableCell>
                  <TableCell>{designationState.designationRecord.date_created}</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Last Updated By </TableCell>
                  <TableCell>{
                    !isEmpty(designationState.designationRecord.created_by_user)?
                    designationState.designationRecord.updated_by_user.email:''
                  }</TableCell>
                </TableRow>
                <TableRow>
                  <TableCell variant="head" > Last Updated At </TableCell>
                  <TableCell>{designationState.designationRecord.date_last_modified}</TableCell>
                </TableRow>
              </TableBody> 
            </Table> 
          </TableContainer>
        </CardContent>
      </Card> 
      <Card
        className={classes.projectDetails}
      >
        <CardHeader title="Designation Description" />
        <CardContent> 
            <div 
              className="ck-content" dangerouslySetInnerHTML={{ __html: designationState.designationRecord.description }} />
        </CardContent>  
      </Card>   
    </Page>
  );
}

export default DesignationView;
