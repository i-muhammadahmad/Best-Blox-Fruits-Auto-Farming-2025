import axios from 'axios';
import { API_URL } from 'configs'

export const COMPANY_REQUEST = 'COMPANY_REQUEST'
export const COMPANY_SUCCESS = 'COMPANY_SUCCESS'
export const COMPANY_VALIDATION_ERROR = 'COMPANY_VALIDATION_ERROR'
export const SHOW_SNACKBAR = 'SHOW_SNACKBAR';
export const HIDE_COMPANY_FEILD_VALIDATION_ERROR = "HIDE_COMPANY_FEILD_VALIDATION_ERROR"
export const REDIRECT_TO_COMPANY_LIST = 'REDIRECT_TO_COMPANY_LIST'
export const COMPANY_GET_SUCCESS = 'COMPANY_GET_SUCCESS'
export const CLIENT_COMPANIES_LIST_SUCCESS = 'CLIENT_COMPANIES_LIST_SUCCESS'
export const COMPANY_SERVER_SUCCESS = 'COMPANY_SERVER_SUCCESS'
const SHOW_LOADER = 'SHOW_LOADER';
const HIDE_LOADER = 'HIDE_LOADER';

const showCommonLoader = (label = '') => ({
  type: SHOW_LOADER,
  common_loder_label: label
})
const hideCommonLoader = () => ({
  type: HIDE_LOADER,
})

const companyRequest = () => ({
  type: COMPANY_REQUEST,
})

const clientCompaniesListSuccess = clientCompaniesList => ({
  type: CLIENT_COMPANIES_LIST_SUCCESS,
  clientCompaniesList: clientCompaniesList,
})

export const companyServerListSuccess = () => ({
  type: COMPANY_SERVER_SUCCESS,
})

const companyListSuccess = companyList => ({
  type: COMPANY_SUCCESS,
  companyList: companyList,
})

const companyFailure = notification => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: notification,
  snackbar_notification_type: 'general_error'
})
const validationError = notification => ({
  type: COMPANY_VALIDATION_ERROR,
  validation_error: notification,
})
const tokenError = notification => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: notification,
  snackbar_notification_type: 'token_expire'
})

const companyAddUpadteSuccess = (message, action, dispatch) => {
  dispatch(companySuccessNotification(message))
  dispatch(redirectToCompanyList())
}

export const redirectToCompanyList = () => ({
  type: REDIRECT_TO_COMPANY_LIST,
})

const getCompanySuccess = (response, action) => ({
  type: COMPANY_GET_SUCCESS,
  record: response,
  actionType: action
})

const companySuccessNotification = message => ({
  type: SHOW_SNACKBAR,
  snackbar_notification: message,
  snackbar_notification_type: 'success'
})

export const hideCompanyValidationError = (feild_key) => ({
  type: HIDE_COMPANY_FEILD_VALIDATION_ERROR,
  feild_key: feild_key
})

export const companyListFetch = () => {
  var token = localStorage.getItem("token")
  return dispatch => {
    dispatch(companyRequest())
    dispatch(showCommonLoader())
    return axios(API_URL + "company/getAll", {
      method: "GET",
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
        'Authorization': 'Bearer ' + token
      },
    })
      .then((response) => {
        dispatch(hideCommonLoader())
        dispatch(companyListSuccess(response.data))
      }, (error) => {
        dispatch(hideCommonLoader())
        handleErrorResponse(error, dispatch)
      });

  }
}


export const clientCompaniesListFetch = () => {
  var token = localStorage.getItem("token")
  return dispatch => {
    dispatch(companyRequest())
    dispatch(showCommonLoader())
    return axios(API_URL + "company/getByAttributes", {
      method: "POST",
      headers: {
        'Content-Type': 'application/json',
        Accept: 'application/json',
        'Authorization': 'Bearer ' + token
      },
      data: [
        {
          "key": "is_client",
          "value": '1'
        },
      ]
    })
      .then((response) => {
        dispatch(hideCommonLoader())
        dispatch(clientCompaniesListSuccess(response.data))
      }, (error) => {
        dispatch(hideCommonLoader())
        handleErrorResponse(error, dispatch)
      });

  }
}

