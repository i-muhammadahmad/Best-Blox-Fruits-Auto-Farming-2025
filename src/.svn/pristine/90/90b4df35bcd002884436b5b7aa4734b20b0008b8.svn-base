export const getCompanyById = (id, action) => {
  var token = localStorage.getItem("token")
  return dispatch => {
    dispatch(companyRequest())
    dispatch(showCommonLoader())
    return axios(API_URL + "company/getById/" + id, {
      method: "GET",
      headers: {
        'Content-Type': 'application/json',
